<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="170dp"
        android:layout_height="300dp"
        app:elevation="4dp"
        app:cardCornerRadius="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/resultCVImage"
                android:src="@drawable/ic_questionmark_icon"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"/>

        <LinearLayout
                android:id="@+id/resultTypeRating"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/shortMargin">

            <TextView
                    android:id="@+id/resultNameTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textSize="22sp"
                    android:singleLine="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/resultMediaType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/shortMargin"/>

                <ImageView
                        android:id="@+id/resultRating"
                        android:src="@drawable/ic_star_color_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/shortMargin"/>

                <TextView
                        android:id="@+id/resultRatingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
