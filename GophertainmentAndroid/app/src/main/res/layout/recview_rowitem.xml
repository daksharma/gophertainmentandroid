<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="16dp"/>

    <LinearLayout
            android:layout_width="286dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/resultImageView">

        <TextView
                android:id="@+id/resultTitleTV"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"/>

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/resultMediaTypeTV"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/shortMargin"
                    android:layout_marginStart="@dimen/shortMargin"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/ic_movie_color_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:foregroundGravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_star_color_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/resultMediaTypeTV"/>


            <TextView
                    android:id="@+id/resultPopularityTV"
                    android:text="*"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/resultMediaTypeTV"/>

            <TextView
                    android:id="@+id/resultReleaseDate"
                    android:text="release date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/resultPopularityTV"/>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>